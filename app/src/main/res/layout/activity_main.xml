<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:orientation="vertical">


        <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_margin="10sp"
                card_view:cardElevation="50sp"
                card_view:cardCornerRadius="10sp">


            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/swaylogo"/>


        </androidx.cardview.widget.CardView>



       <androidx.cardview.widget.CardView
               xmlns:card_view="http://schemas.android.com/apk/res-auto"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10sp"
               card_view:cardElevation="50sp"

               card_view:cardCornerRadius="10sp">

           <LinearLayout android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="vertical">

               <TextView android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:text="Present Status"
                         android:textAlignment="center"
                         android:layout_gravity="center_horizontal"
                         android:textColor="#009688"
                         android:layout_margin="5sp"
               />
               <TextView android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_margin="10sp"
                         android:hint="food type"
                         android:paddingBottom="5sp"
                         android:textStyle="bold"
                         android:textSize="25sp"
                         android:id="@+id/foodTypeText"
                         android:textAlignment="center"
                         android:textColor="#CC0C0C"/>
               <LinearLayout android:layout_width="match_parent"
                             android:layout_height="54sp"
                             android:orientation="horizontal"

               >
                   <TextView


                           android:text="plates left : "
                           android:paddingStart="80sp"
                           android:background="#00003CD4"
                           android:textColor="#000"
                           android:paddingTop="5sp"
                           android:paddingEnd="5sp"
                           android:layout_gravity="center_horizontal"

                           android:textSize="20sp"

                           android:layout_width="wrap_content"
                           android:layout_height="50sp"
                           android:id="@+id/textView3"


                           android:layout_alignParentBottom="true"
                           android:layout_marginBottom="60sp"/>


                   <TextView
                           android:hint="counting..."
                           android:layout_width="match_parent"
                           android:layout_weight="0.5"
                           android:layout_height="50sp"
                           android:textColor="#EB1010"
                           android:paddingEnd="5sp"
                           android:paddingTop="5sp"
                           android:textSize="20sp"
                           android:layout_marginBottom="60sp"
                           android:id="@+id/platecountText"/>


               </LinearLayout>


           </LinearLayout>
       </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                card_view:cardElevation="50sp"

                card_view:cardCornerRadius="10sp">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginTop="10sp"
                android:scrollHorizontally="true"
                android:hint="Enter your name to join us"
                android:lines="1"
                android:maxLength="35"
                android:layout_margin="10sp"
                android:ems="10"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="21dp"
                android:id="@+id/editText" />
        <Button
                android:text="Go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="#009688"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/gobutton"

        />
            </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            card_view:cardElevation="50sp"

            card_view:cardCornerRadius="10sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
        >

            <LinearLayout android:orientation="horizontal"
                          android:layout_height="wrap_content"
                          android:layout_width="match_parent"
                          android:layout_margin="10sp"
            >

                <TextView
                        android:text="Date Selected : "
                        android:textStyle="bold"
                        android:paddingLeft="10sp"
                        android:paddingTop="10sp"
                        android:textSize="20sp"

                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:id="@+id/selectDate"/>

                <TextView android:layout_weight="0.75"
                          android:layout_marginLeft="10sp"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_gravity="center"
                          android:textColor="#2E46CA"

                          android:id="@+id/DateText"
                          android:textStyle="bold"
                          android:hint="Date "/>

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/calenderimage"
                           android:id="@+id/calenderImg"
                />


            </LinearLayout>
            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20sp"
                    android:layout_gravity="center"
                    android:background="#009688"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:id="@+id/menuButton"
                    android:text="Check Menu"
                    android:padding="5sp"
            />
        </LinearLayout>
    </androidx.cardview.widget.CardView>






    </LinearLayout>
        </ScrollView>